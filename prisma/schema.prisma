generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  name         String
  createdAt    DateTime @default(now())

  bookLogs  BookLog[]
  comments  Comment[]
  likes     Like[]
  bookmarks Bookmark[]

  followers  Follow[] @relation("followers")
  followings Follow[] @relation("followings")
}

model BookLog {
  id Int @id @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId], references: [id])
  title     String
  author    String
  thumbnail String?
  rating     Int?
  isDone      Boolean     @default(true)
  isPublic    Boolean     @default(true)
  content  String // 독후감 본문
  readDate DateTime // 독서일 (통계에 필요)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  comments  Comment[]
  likes     Like[]
  bookmarks Bookmark[]
}

model Comment {
  id Int @id @default(autoincrement())

  userId    Int
  bookLogId Int

  user    User    @relation(fields: [userId], references: [id])
  bookLog BookLog @relation(fields: [bookLogId], references: [id])

  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Like {
  userId    Int
  bookLogId Int

  user    User    @relation(fields: [userId], references: [id])
  bookLog BookLog @relation(fields: [bookLogId], references: [id])

  createdAt DateTime @default(now())

  @@id([userId, bookLogId])
}

model Bookmark {
  userId    Int
  bookLogId Int

  user    User    @relation(fields: [userId], references: [id])
  bookLog BookLog @relation(fields: [bookLogId], references: [id])

  createdAt DateTime @default(now())

  @@id([userId, bookLogId])
}

model Follow {
  followerId  Int
  followingId Int

  follower  User @relation("followers", fields: [followerId], references: [id])
  following User @relation("followings", fields: [followingId], references: [id])

  createdAt DateTime @default(now())

  @@id([followerId, followingId])
}
